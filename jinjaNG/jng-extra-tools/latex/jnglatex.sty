\ExplSyntaxOn

\NewDocumentCommand{\JNGVALOF}{m}{
  	\textcolor{red}{\fbox{\ttfamily\jnglatex_valof:n{#1}}}
}

\tl_new:N \l__jnglatex_sanitized

\cs_new_protected:Nn \jnglatex_valof:n{
  	\tl_set:Nn \l__jnglatex_sanitized {#1}
  	\regex_replace_all:nnN {_}{\c{textunderscore}} \l__jnglatex_sanitized
  	\tl_use:N \l__jnglatex_sanitized
}

\ExplSyntaxOff
